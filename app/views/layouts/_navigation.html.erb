<div class="container-fluid header-roadin">
  <div class="container">
    <%= link_to "Roadin'", root_path, class: 'logo-roadin' %>
    <nav class="roadin-navigation">
      <a href="#">Home</a>
      <a href="#">Concept</a>
      <a href="#">About</a>
      <a href="#"> Blog </a>
      <% if user_signed_in? %>
          <a href="#"><%= link_to current_user.name, user_path(current_user) %></a>
          <%= link_to('Logout', sign_out_path, class: 'logout') %>
          <%= image_tag(current_user.picture, :alt =>  "#{current_user.name} profile picture from facebook", class: "profile-picture") %>
      <% else %>
          <%= link_to('Login', signin_path, class: 'button button-default')  %>
      <% end %>
    </nav>
  </div>
</div>
