<%= form_for [@travel, Step.new] do |f| %>
    <label> Lieu de l'étape </label>
    <%= f.text_field :place, class: 'form-control', placeholder: 'e.g: France, United-States...', id: 'address-input' %>
    <label> Pays </label>
    <br>
    <%= f.select :country do %>
		<% ISO3166::Country.all.each do |country| %>
			<option value="<%= country.alpha2 %>"><%= country.name %> <%= country.emoji_flag %> </option>
		<% end %>
    <% end %>
    <br>
    <label> Temps sur place </label>
    <%= f.text_field :time_to_stay, class: 'form-control', placeholder: 'e.g: 1, 2 or 3' %>
    <label> Décrivez votre étape </label>
    <%= f.text_area :step_description, class: 'form-control', placeholder: 'What you will do during the step' %>
	<br>
	<i class="ion-plane"></i> &nbsp; <label class="checkbox-inline"><%= f.check_box :plane %>Prenez-vous l'avion</label>
    <br>
    <%= f.submit 'Créer', class: 'Roadin-button Roadin-button--state-cherry' %>
<% end %>
