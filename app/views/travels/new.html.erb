<div class="container-fluid user-container-roadin">
  <div class="col-md-11 col-md-offset-1">
    <h5> Create a travel </h5>
    <%= form_for @travel, html: { class: 'form-horizontal' } do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
      <%= f.label :begin_date %>
      <%= f.date_field :begin_date, class: 'form-control' %>
      <%= f.label :end_date %>
      <%= f.date_field :end_date, class: 'form-control' %>
      <%= f.label :budget %>
      <%= f.text_field :budget, class: 'form-control' %>
      <%= f.submit 'Publish', class: 'Roadin-button Roadin-button--state-cherry' %>
  <% end %>
  </div>
</div>
